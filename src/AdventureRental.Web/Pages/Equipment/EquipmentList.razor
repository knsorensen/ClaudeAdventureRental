@page "/equipment"
@inject HttpClient Http

<PageTitle>Equipment</PageTitle>

<div class="container mt-4">
    <h2>Available Equipment</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <input class="form-control" placeholder="Search..." @bind="search" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="categoryId" @bind:after="LoadEquipment">
                <option value="">All Categories</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <p>Loading...</p>
    }
    else if (!equipment.Any())
    {
        <p>No equipment found.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in equipment)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height:200px;object-fit:cover;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-muted">@item.CategoryName</p>
                            <p class="card-text">@item.Description</p>
                            <p class="fw-bold">$@item.DailyRate.ToString("F2") / day</p>
                        </div>
                        <div class="card-footer">
                            <a href="equipment/@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                            <AuthorizeView>
                                <Authorized>
                                    <a href="reservations/new?equipmentId=@item.Id" class="btn btn-success btn-sm ms-2">Rent</a>
                                </Authorized>
                            </AuthorizeView>
                            <AuthorizeView Roles="Admin">
                                <a href="admin/equipment/@item.Id/edit" class="btn btn-outline-secondary btn-sm ms-2">Edit</a>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <span>Showing @equipment.Count of @totalCount items</span>
            <div>
                <button class="btn btn-outline-secondary btn-sm" disabled="@(page <= 1)" @onclick="PrevPage">Previous</button>
                <span class="mx-2">Page @(page) of @totalPages</span>
                <button class="btn btn-outline-secondary btn-sm" disabled="@(page >= totalPages)" @onclick="NextPage">Next</button>
            </div>
        </div>
    }

    <AuthorizeView Roles="Admin">
        <div class="mt-3">
            <a href="admin/equipment/new" class="btn btn-primary">+ Add Equipment</a>
        </div>
    </AuthorizeView>
</div>

@code {
    private List<EquipmentDto> equipment = new();
    private List<CategoryDto> categories = new();
    private bool isLoading = true;
    private string? search;
    private int? categoryId;
    private int page = 1;
    private int pageSize = 9;
    private int totalCount;
    private int totalPages;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
        await LoadEquipment();
    }

    private async Task LoadCategories()
    {
        var result = await Http.GetFromJsonAsync<List<CategoryDto>>("api/v1/equipment-categories");
        categories = result ?? new();
    }

    private async Task LoadEquipment()
    {
        isLoading = true;
        var url = $"api/v1/equipment?page={page}&pageSize={pageSize}";
        if (categoryId.HasValue) url += $"&categoryId={categoryId}";
        if (!string.IsNullOrWhiteSpace(search)) url += $"&search={Uri.EscapeDataString(search)}";

        var result = await Http.GetFromJsonAsync<PagedResult>(url);
        if (result != null)
        {
            equipment = result.Items ?? new();
            totalCount = result.TotalCount;
            totalPages = result.TotalPages;
        }
        isLoading = false;
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        page = 1;
        await LoadEquipment();
    }

    private async Task PrevPage() { page--; await LoadEquipment(); }
    private async Task NextPage() { page++; await LoadEquipment(); }

    private class EquipmentDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string CategoryName { get; set; } = string.Empty;
        public string? Description { get; set; }
        public string? ImageUrl { get; set; }
        public decimal DailyRate { get; set; }
        public int TotalUnits { get; set; }
    }

    private class CategoryDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }

    private class PagedResult
    {
        public List<EquipmentDto>? Items { get; set; }
        public int TotalCount { get; set; }
        public int TotalPages { get; set; }
    }
}
